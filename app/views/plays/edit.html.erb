<h1>Edit Play</h1>

<%= simple_form_for @play, html: { multipart: true } do |f|%>
<%= f.select :category_id, @categories %>
<%= f.input :title, label: 'Play Title' %>
<%= f.input :description, label: 'Play Description'  %>
<%= f.input :director, label: 'Play Director'%>
<%= f.button :submit %>
<% end %>